{
  "name": "employee-management",
  "version": "1.0.0",
  "description": "Employee management app we are creating during the training session",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test-coverage": "jest --coverage",
    "build": "rm -rf dist && npx tsc",
    "dev": "npx tsc && node dist/server.js",
    "migration:create": "npm run build && npx typeorm migration:create",
    "migration:generate": "npm run build && npx typeorm migration:generate -d dist/db/data-source.js",
    "migration:run": "npm run build && npx typeorm migration:run -d dist/db/data-source.js",
    "migration:revert": "npm run build && npx typeorm migration:revert -d dist/db/data-source.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jatulya/Employee-Management.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/jatulya/Employee-Management/issues"
  },
  "homepage": "https://github.com/jatulya/Employee-Management#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.24",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/pg": "^8.15.2",
    "@types/winston": "^2.4.4",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "jest-when": "^3.7.0",
    "ts-jest": "^29.3.4",
    "winston": "^3.17.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(t)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/**/*.ts",
      "!**/index.ts"
    ]
  }
}
